{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["jsx-a11y", "react", "import"],
  "settings": {
    "import/resolver": {
      "webpack": "webpack"
    }
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "rules": {
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    "react/prefer-es6-class": "off",
    "no-unused-vars": ["error"],
    "no-console": "off",
    "new-cap": "off",
    "react/prop-types": 0,
    "indent": [
      "error",
      2,
      {"SwitchCase": 1}
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}

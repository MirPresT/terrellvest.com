- var aboutClass = "inactive"
- var blogClass = "inactive"
- var portfolioClass = "inactive"
- var contact = "active"

- var logoURL = "../assets/images/sprites/sprites.svg#logo";

- var imageNames = {"twitter":"twitter-logo-blue.png","facebook":"facebook-logo-white.png","instagram":"Glyph_Logo_png.png","linkedIn":"linkedIn-white.png","github":"github-white.png"}

doctype HTML
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    link(href="../assets/styles/main.css" rel="stylesheet" type="text/css")
  body
    div.nav_container
    header
      nav
        div.row
          include ../assets/markup/logo.jade
          include ../assets/markup/nav.jade
    main
      .row.icons
        header.sub-header.col
        #contact-sections.col
          div.social-container
            h1 Social
            p Perfect for a brief message
            row.icons
              each val, key in imageNames
                .box.col(class="#{key}_circle")
                  img(src="../assets/images/social-icons/" + val id=key).logo
                  
                  
          div.email-container
            h1 Email
            p If your message is a bit longer
            address 
              a(href="mailto:terrell@terrellvest.com") terrell@terrellvest.com

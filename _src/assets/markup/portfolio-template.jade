- var aboutClass = "inactive";
- var blogClass = "inactive";
- var portfolioClass = "active";
- var contactClass = "inactive";

- var logoURL = "../../assets/images/sprites/sprites.svg#logo"

doctype HTML
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    link(href="../../assets/styles/grizzly/grid.css" rel="stylesheet" type="text/css")
    link(href="../../assets/styles/main.css" rel="stylesheet" type="text/css")
  body
    .page-wrapper
      include ../../assets/markup/nav.jade
      main.portfolio-post-main
        article.row.center--col-x
          div.post-wrap.box.wrapper.center-content
            header.header(style='border-color:' + colorDark)
              h1.post-title #{title}
              span.post-date #{date}
              div.btn-links
                button(style='background-color:' + colorDark).header-btn App
                button.header-btn Code 
            div.box.post-md-content.md-content
              != pageMarkdownContent
        #disqus_thread
    script(src="../../assets/scripts/g_a_code.js")
    script(src="../../assets/scripts/portfolio-post.js")
    noscript
      Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
        

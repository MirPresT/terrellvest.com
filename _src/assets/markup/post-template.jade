- var aboutClass = "inactive";
- var blogClass = "active";
- var portfolioClass = "inactive";
- var contactClass = "inactive";

- var logoURL = "../../assets/images/sprites/sprites.svg#logo"

doctype HTML
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    link(href="../../assets/styles/main.css" rel="stylesheet" type="text/css")
  body
    div.nav_container
    header
      nav
        div.row
          include ./logo.jade
          include ./nav.jade
    main.blog-post-content
      article.row
        div#blog-header-wrap.col
          header
            h1.page-title #{postTitle}
          div.blog-post-description
            span #{postDate}
            span Read Time #{postReadTime} mins
        div#blog-post-md-content.md-content.col
          != postContent
        #back-blog-container
          a#back-blog.col(href="/blog") All Posts
    script(src="../../assets/scripts/g_a_code.js")

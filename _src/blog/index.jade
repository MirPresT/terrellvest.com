- var aboutClass = "inactive"
- var blogClass = "active"
- var portfolioClass = "inactive"

- var logoURL = "../assets/images/sprites/sprites.svg#logo";

doctype HTML
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    link(href="../assets/styles/main.css" rel="stylesheet" type="text/css")
  body
    div.nav_container
    header#site-header
      nav
        div.row
          include ../assets/markup/logo.jade
          include ../assets/markup/nav.jade
    main#blog-content
      .row
        header.sub-header.col
          h1.page-title Posts
        div#blog-posts.col
          each post in postArr
            div
              a(href=post.path)
                p=post.title
                span=post.date
    script(src="../assets/scripts/g_a_code.js")
